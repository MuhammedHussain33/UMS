<% include ("../layouts/header.ejs") %>
<center>
<h1>Dashboard</h1>
<a href="/admin/new-user"><button type="button">üë•Add new User</button></a>
<br><br>

<form>
      <input type="text" placeholder="üîéSearch User name,email,mobile"name="search" >
      <input type="submit" value="Search">
</form>
<style>
  table, th, td{
    border:2px solid black;
  }
</style>

<table width="50%">

      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Image</th>
        <th>Verified</th>
        <th>Actions</th>
      </tr>

      <% 
      if(users.length > 0){
          for(let i=0;i<users.length;i++){
             %>
              <tr>

                <td><%= users[i].name %></td>
                <td><%= users[i].email %></td>
                <td><%= users[i].mobile %></td>
                <td><img src="/userimages/<%= users[i].image %>" alt="<%= users[i].image %>" width="100px" height="100px" ></td>
 
                <td><%
                    
                    if(users[i].is_varified == 0){
                        %>
                        <p>Not Verified</p>
                        <%
                    }
                    else{
                        %>
                        <p>Verified</p>
                        <%
                    }
                    %></td>

                
                    <td>
                    <a href="/admin/edit-user?id=<%= users[i]._id %>">Edit</a>
                    <a href="/admin/delete-user?id=<%= users[i]._id %>">Delete</a>
                </td>
              </tr>
             <%
          }
      }
      else{
           %>
             <tr>
                <td colspan="5">Users Not found</td>
             </tr>

           <%
      }
      
      %>

</table>
<br>
<% 
for(let j = 1; j <=totalPages; j++){
    %>

        <a href="?page=<%= j %>"><%= j %></a>

    <%

}
%>
<br><br>

